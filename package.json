{
  "name": "web-image-categorizer",
  "version": "0.1.10",
  "description": "Save images from webpages to FileLu using custom naming templates.",
  "type": "module",
  "scripts": {
    "debug": "web-ext run -s build",
    "firefox": "node utils/merge-manifest.js 'firefox' && webpack",
