    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.302",
    "@types/firefox-webext-browser": "^120.0.4",
    "@types/node": "^22.13.0",
    "@types/webpack": "^5.28.5",
    "archiver": "^7.0.1",
    "concurrently": "^9.1.2",
    "copy-webpack-plugin": "^12.0.2",
    "ts-loader": "^9.5.2",
