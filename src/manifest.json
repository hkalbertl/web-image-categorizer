// DO NOT edit this file (/src/manifest.json) directly
// Please try to change the settings under the /manifest/*.json
{
  "version": "0.2.3",
  "manifest_version": 3,
  "name": "Web Image Categorizer",
  "short_name": "WIC",
  "description": "Save images from webpages to FileLu using custom naming templates.",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "*://*/*"
  ],
  "icons": {
    "32": "icons/wic-32.png",
    "48": "icons/wic-48.png",
    "128": "icons/wic-128.png",
    "512": "icons/wic-512.png"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "notifications",
    "storage"
  ],
  "sidebar_action": {
    "default_title": "WIC Sidebar",
    "default_panel": "sidebar.html",
    "open_at_install": false
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "type": "module"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{bea31321-7d20-4dc1-a53f-5affb7b85a24}",
      "strict_min_version": "127.0"
    }
  }
}