{
  "manifest_version": 3,
  "name": "Web Image Categorizer",
  "short_name": "WIC",
  "description": "Save images from webpages to FileLu using custom naming templates.",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "*://*/*"
  ],
  "icons": {
    "32": "icons/wic-32.png",
    "48": "icons/wic-48.png",
    "128": "icons/wic-128.png",
    "512": "icons/wic-512.png"
  }
}
